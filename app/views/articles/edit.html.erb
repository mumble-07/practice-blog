<%= form_with scope: :article, model: @article, method: :put, locale: true do |f| %>
<div>
  <% if @article.errors.any? %>
    <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<div class = "form_title">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class = "form_body">
  <%= f.label :body %>
  <%= f.text_field :body %>
</div>

<div>
  <%= f.submit %>
</div>
<% end %>